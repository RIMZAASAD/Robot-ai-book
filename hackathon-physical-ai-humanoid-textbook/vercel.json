{
  "version": 2,
  "builds": [
    {
      "src": "website/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    }
  ],
  "github": {
    "enabled": true
  }
}